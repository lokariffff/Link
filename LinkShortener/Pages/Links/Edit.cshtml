@page
@model EditModel

<h1>Редактировать ссылку</h1>

<form method="post">
    <input type="hidden" asp-for="Link.Id" />
    <div class="form-group">
        <label asp-for="Link.OriginalUrl"></label>
        <input asp-for="Link.OriginalUrl" class="form-control" />
        <span asp-validation-for="Link.OriginalUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link.ShortCode"></label>
        <input asp-for="Link.ShortCode" class="form-control" />
        <span asp-validation-for="Link.ShortCode" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

<a asp-page="./Index">Назад к списку</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<input asp-for="Link.ShortCode" class="form-control" readonly />